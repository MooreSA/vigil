{
  "name": "vigil",
  "version": "0.1.0",
  "private": true,
  "license": "MIT",
  "type": "module",
  "scripts": {
    "dev": "node --import tsx/esm --watch src/index.ts",
    "build": "tsc",
    "start": "node dist/index.js",
    "migrate": "tsx src/db/migrate.ts",
    "migrate:prod": "node dist/db/migrate.js",
    "build:web": "cd web && npm run build",
    "test": "vitest run && cd web && npx vitest run",
    "test:watch": "vitest",
    "lint": "eslint src/"
  },
  "dependencies": {
    "@fastify/static": "^9.0.0",
    "@mozilla/readability": "^0.6.0",
    "@openai/agents": "^0.5.2",
    "croner": "^10.0.1",
    "dotenv": "^16.4.7",
    "fastify": "^5.2.1",
    "kysely": "^0.27.5",
    "linkedom": "^0.18.12",
    "pg": "^8.13.1",
    "pino": "^9.6.0",
    "turndown": "^7.2.2",
    "zod": "^4.3.6"
  },
  "devDependencies": {
    "@eslint/js": "^10.0.1",
    "@types/node": "^22.12.0",
    "@types/pg": "^8.11.11",
    "@types/turndown": "^5.0.6",
    "eslint": "^10.0.2",
    "pino-pretty": "^13.1.3",
    "tsx": "^4.19.2",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.56.1",
    "vitest": "^3.0.5"
  }
}
